<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Signup">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label contentDisplay="CENTER" prefHeight="126.0" prefWidth="570.0" text="CHAT_APP" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets left="25.0" right="25.0" top="25.0" />
                    </padding>
                    <font>
                        <Font name="Arial Black" size="39.0" />
                    </font>
                </Label>
                <Label prefHeight="89.0" prefWidth="676.0" text="CREATE YOUR ACCOUNT">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="5.0" />
                    </padding>
                    <font>
                        <Font name="System Italic" size="41.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="namefirst" prefHeight="55.0" prefWidth="468.0" promptText="First Name">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <VBox.margin>
                        <Insets left="20.0" top="35.0" />
                    </VBox.margin>
                </TextArea>
                <TextArea fx:id="nameuser" prefHeight="55.0" prefWidth="468.0" promptText="Password">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" top="20.0" />
                    </VBox.margin>
                </TextArea>
                <Button mnemonicParsing="false" onAction="#StartLogin" prefHeight="31.0" prefWidth="140.0" text="Submit">
                    <VBox.margin>
                        <Insets left="20.0" top="15.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets right="40.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER" />
    </center>

</BorderPane>
